{
  "name": "{{appname}}",
  "dependencies": [
    {
      "name": "granite",
      "version": "latest"
    },
    {
      "name": "gio-unix-2.0",
      "version": "^2.20"
    }
  ],
  "build": {
    "directory": "build",
    "output": "{{rdnn_appname}}",
    "system": "meson",
    "type": "application"
  },
  "files": {
    "assets": [
      {
        "files": [
          "data/icons"
        ],
        "type": "icons"
      },
      {
        "files": [
          "data/appdata.xml"
        ],
        "type": "appdata_xml"
      },
      {
        "files": [
          "data/{{rdnn_appname}}.desktop"
        ],
        "type": "desktop_entry"
      }
    ],
    "source": [
      "config.vala",
      "src/Application.vala"
    ]
  },
  "vala": {
    "version": "^0.50"
  }
}